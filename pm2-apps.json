{
  "apps": [
    {
      "name": "tavily-mcp-server",
      "script": "dist/index.js",
      "cwd": "/home/ubuntu/roo-tavily/tavily-mcp-server",
      "instances": 1,
      "exec_mode": "fork",
      "watch": false,
      "max_memory_restart": "500M",
      "env": {
        "NODE_ENV": "production",
        "TAVILY_API_KEY": ""
      },
      "env_development": {
        "NODE_ENV": "development",
        "TAVILY_API_KEY": ""
      },
      "log_file": "/var/log/pm2/tavily-mcp-server.log",
      "out_file": "/var/log/pm2/tavily-mcp-server-out.log",
      "error_file": "/var/log/pm2/tavily-mcp-server-error.log",
      "log_date_format": "YYYY-MM-DD HH:mm:ss Z",
      "merge_logs": true,
      "autorestart": true,
      "max_restarts": 10,
      "min_uptime": "10s",
      "restart_delay": 4000,
      "kill_timeout": 5000,
      "listen_timeout": 8000,
      "shutdown_with_message": true
    }
  ]
}